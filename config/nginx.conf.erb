
daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
  gzip on;
  gzip_comp_level 2;
  gzip_min_length 512;

	server_tokens off;

	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	include mime.types;
	default_type application/octet-stream;
	sendfile on;

	#Must read the body in 5 seconds.
	client_body_timeout 5;

	# handle SNI
    proxy_ssl_server_name on;
    # resolver needs to be set because we're using dynamic proxy_pass
    resolver 8.8.8.8;

	upstream app_server {
		server unix:/tmp/nginx.socket fail_timeout=0;
 	}

 	upstream upstream_app_blog {
        server blog.democracylab.org:443;
    }

	server {
		listen <%= ENV["PORT"] %>;
		server_name _;
		keepalive_timeout 5;

		large_client_header_buffers 4 32k;

    	# root   ./;
	#index  index.html index.htm;

		location  / {
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			# 3001 needs to be hardcoded on the node server/webpack or whatsoever
			proxy_pass http://0.0.0.0:3000;
			client_max_body_size 15m;
		}

		location /blog {
			set $upstream upstream_app_blog;
            proxy_pass https://blog.democracylab.org/;
            proxy_ssl_name blog.democracylab.org;
            proxy_set_header Host blog.democracylab.org;
            # proxy_redirect off;
		}

		location ~ ^/blog(?:/(.*))?$ {
			alias https://blog.democracylab.org/;
		}

	}
}
